<h1>These are your tasks:</h1>
<ul><% @tasks.each do |task| %>
  <li>
  <%= link_to task.name, task_path(task) %>
  <%= task.content %>
  <%= link_to 'Edit', edit_task_path(task), method: :get, data: { confirm: 'Are you sure you want to edit this task?'} %>
  <%= link_to 'Remove', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?'} %>
  </li>
<% end %>
</ul>

